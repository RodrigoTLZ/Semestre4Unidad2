<UserControl x:Class="Proyecto_U2___Reposteria.Views.PostreControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Proyecto_U2___Reposteria.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Margin="5">
        <Image HorizontalAlignment="Center" Height="50" Source="{Binding Imagen}"></Image>
        <Label HorizontalAlignment="Center" Foreground="Brown" Content="{Binding Nombre}"></Label>
    </StackPanel>
</UserControl>
